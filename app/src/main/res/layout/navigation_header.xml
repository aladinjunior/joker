<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/orange_500">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="@dimen/icon_header_default_space"
        android:layout_marginStart="@dimen/icon_header_default_space"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginBottom="@dimen/label_header_default_space"
        android:layout_marginStart="@dimen/label_header_default_space"
        android:layout_marginTop="@dimen/label_header_vertical_space"/>








</LinearLayout>